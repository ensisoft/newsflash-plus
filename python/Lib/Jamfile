

local python_files = [ glob-tree *.py ] ;

constant REL : $(NEWSFLASH_INSTALL_REL)"/Python-2.5.1/Lib" ;
constant DBG : $(NEWSFLASH_INSTALL_DBG)"/Python-2.5.1/Lib" ;

install lib : $(python_files) 
: 
  <variant>release:<location>$(REL)
  <variant>debug:<location>$(DBG)
: 
  <install-source-root>.
;


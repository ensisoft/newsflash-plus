
project gui 
: 
  requirements

  <library>/qt//QtCore
  <library>/qt//QtGui
  <library>/qt//QtXml
  <library>/qt//QtNetwork  
  <library>/newsflash//qjson
  <library>/newsflash//python
  <library>/newsflash//dl
  <library>/newsflash//util

  # for promoted widgets since we're building using *this* jamfile
  <include>gui/
;

exe newsflash 
:
  [ glob *.ui  ]
  [ glob *.h   ]
  [ glob *.cpp ]

  qtsingleapplication/qtsingleapplication.h
  qtsingleapplication/qtsingleapplication.cpp
  qtsingleapplication/qtlocalpeer.h
  qtsingleapplication/qtlocalpeer.cpp

  [ glob gui/*.ui  ]
  [ glob gui/*.h   ]
  [ glob gui/*.cpp ]

  gui/resource.qrc

  ../keygen/keygen.cpp 
;

install ../dist_d : newsflash 
:
  <variant>release:<location>../dist
;

